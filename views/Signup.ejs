<!DOCTYPE html>
<html lang="en">

<head>
    <!--STYLES-->
    <link rel="stylesheet" href="/styles/angular-toastr.css">
    <link rel="stylesheet" href="/styles/app.css">
    <link rel="stylesheet" href="/styles/foundation.css">
    <link rel="stylesheet" href="/styles/importer.css">
    <!--STYLES END-->

    <title>SignUp</title>


</head>

<body ng-app="SignUpMod" ng-controller="SignUpCtrl">


    <div class="large-4 large-centered columns">
        <div class="signup-box">
            <div class="row">
                <div class="large-12 columns">
                    <h2 class="text-center">
                    User Auth
                </h2>
                    <p>Please Fillin the fields below To sign up</p>
                    <form ng-submit="runSignup()">
                        <div class="row">
                            <div class="large-12 columns">
                                <input ng-model="name" type="text" name="name" placeholder="Name" ng-maxlength="40" required>

                            </div>
                        </div>
                        <div class="row">
                            <div class="large-12 columns">
                                <input ng-model="email" type="email" name="email" placeholder="Email" required>

                            </div>
                        </div>
                        <div class="row">
                            <div class="large-12 columns">
                                <input ng-model="password" type="password" name="password" placeholder="Password" ng-maxlength="20" required>

                            </div>
                        </div>
                        <div class="row">
                            <div class="large-12 columns">
                                <input ng-model="password2" type="password" name="password2" placeholder="Confirm Password" maxlength="20" required>

                            </div>
                        </div>
                        <div class="row">
                            <div class="large-7 columns">
                                <input type="submit" class="button expand" value="Create Account">

                            </div>
                            <div class="large-5 columns">
                                <a href="" class="button expand">Log In</a>
                            </div>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>







    <!--SCRIPTS-->
    <script src="/js/dependencies/sails.io.js"></script>
    <script src="/js/dependencies/jquery-3.0.0.js"></script>
    <script src="/js/dependencies/angular.js"></script>
    <script src="/js/dependencies/angular-toastr.js"></script>
    <script src="/js/dependencies/angular-toastr.tpls.js"></script>
    <script src="/js/dependencies/foundation.min.js"></script>
    <script src="/js/public/signup/SignUpMod.js"></script>
    <script src="/js/public/signup/SignUpCtrl.js"></script>
    <script src="/js/public/login/LoginMod.js"></script>
    <script src="/js/public/login/LoginCtrl.js"></script>
    <!--SCRIPTS END-->
</body>

</html>